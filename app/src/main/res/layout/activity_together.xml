<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pnu.whatyoueat.TogetherActivity">

    <ImageView
        android:id="@+id/Together_randomImage"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_above="@+id/Together_PickButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="26dp"
        app:srcCompat="@drawable/icon_random" />

    <TextView
        android:id="@+id/Together_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="같이 추천!"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_above="@+id/layout" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:padding="7dp"
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Together_EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="메세지를 입력해주세요."/>

        <Button
            android:id="@+id/Together_SendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            />

    </LinearLayout>

    <Button
        android:id="@+id/Together_PickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="235dp"
        android:text="PICK" />

    <Button
        android:id="@+id/Together_NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="235dp"
        android:text="NEXT" />

</RelativeLayout>
